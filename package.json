{
  "name": "typescript-hapi-starter",
  "version": "1.0.0",
  "description": "Simple Typescript project.",
  "main": "src/index",
  "types": "dist/index",
  "scripts": {
    "start": "npm run build:live",
    "build:live": "nodemon --exec 'node -r dotenv/config' ./node_modules/.bin/ts-node -- ./src/index.ts",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "prettier": "./node_modules/.bin/prettier --tab-width 4 --print-width 100 --single-quote --trailing-comma all --write 'src/**/*.ts'"
  },
  "pre-commit": [
    "lint",
    "prettier"
  ],
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript"
  ],
  "author": "Jonatan Salas",
  "license": "MIT",
  "dependencies": {
    "hapi": "^16.4.3",
    "hapi-swagger": "^7.7.0",
    "hapijs-status-monitor": "^0.5.0",
    "inert": "^4.2.0",
    "joi": "^10.6.0",
    "typestyle": "^1.3.5",
    "vision": "^4.1.1",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "@types/hapi": "^16.1.6",
    "@types/joi": "^10.4.0",
    "@types/node": "^8.0.6",
    "@types/winston": "^2.3.3",
    "dotenv": "^4.0.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.2",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1"
  }
}
