{
  "author": "BlackBox Vision",
  "contributors": [
    "Jonatan E. Salas <jonatansalas@live.com.ar>"
  ],
  "description": "Starter for building APIs with Hapi + Typescript!",
  "license": "MIT",
  "name": "typescript-hapi-starter",
  "version": "1.0.0",
  "scripts": {
    "docker:logs": "docker-compose logs",
    "docker:ps": "docker-compose ps",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose -f docker-compose.yml down -v --remove-orphans",
    "nodemon:build": "nodemon --exec 'node -r dotenv/config' ./node_modules/.bin/ts-node -- ./src/index.ts",
    "nodemon:start": "npm run nodemon:build",
    "format:lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "format:prettier": "./node_modules/.bin/prettier --tab-width 4 --print-width 120 --single-quote --trailing-comma all --write 'src/**/*.ts'"
  },
  "dependencies": {
    "hapi": "^16.4.3",
    "hapi-boom-decorators": "^3.0.0",
    "hapi-swagger": "^7.7.0",
    "hapijs-status-monitor": "^0.6.0",
    "inert": "^4.2.0",
    "joi": "^10.6.0",
    "nedb": "^1.8.0",
    "vision": "^4.1.1",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "@types/hapi": "^16.1.6",
    "@types/joi": "^10.4.0",
    "@types/nedb": "^1.8.3",
    "@types/node": "^8.0.6",
    "@types/winston": "^2.3.3",
    "dotenv": "^4.0.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.2",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1",
    "typestyle": "^1.3.7"
  },
  "pre-commit": [
    "format:prettier",
    "format:lint"
  ],
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript"
  ]
}
